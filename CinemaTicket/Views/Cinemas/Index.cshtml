@model IEnumerable<CinemaTicket.Models.Screening>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<body>
    <div class="dashboard">
        <aside class="sidebar">
            <div class="logo">
                <h2>Admin Dashboard</h2>
            </div>
            <nav class="nav-links">
                <a asp-controller="Admin" asp-action="Admin">
                    <i class="fas fa-film"></i>
                    <span>Movies Management</span>
                </a>
                <a asp-controller="Cinemas" asp-action="Index" class="active">
                    <i class="fas fa-building"></i>
                    <span>Cinemas Management</span>
                </a>
                <a asp-controller="Emails" asp-action="Index">
                    <i class="fas fa-envelope"></i>
                    <span>Emails Management</span>
                </a>
            </nav>

        </aside>

        <main class="main-content">
            <section id="cinemas" class="section active">
                <div class="section-header">
                    <h2>Cinemas Management</h2>
                    <a asp-action="Create" class="add-btn">
                        <i class="fas fa-plus"></i>
                        Add New Cinema
                    </a>
                </div>
                <div class="table-container">
                    <table>
                        <thead>
                            <tr>
                                <th>Movie Title</th>
                                <th>Hall Number</th>
                                <th>Start Date</th>
                                <th>End Date</th>
                                <th>Available</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Movie.Title</td>
                                    <td>@item.HallNumber</td>
                                    <td>@item.StartDate?.ToString("MM/dd/yyyy")</td>
                                    <td>@item.EndDate?.ToString("MM/dd/yyyy")</td>
                                    <td>@(item.IsAvailable ? "Yes" : "No")</td>
                                    <td class="actions">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="edit-btn"><i class="fas fa-edit"></i></a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="delete-btn" data-id="@item.Id">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </section>
        </main>
    </div>
</body>
