@model Movie

@{
    ViewData["Title"] = "Edit Movie";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

    var selectListItems = new SelectList(ViewBag.Genres as List<string> ?? new List<string>());
}

<div class="container mt-5">
    <h2 class="mb-4">Edit Movie</h2>
    <form asp-action="Edit" method="post" class="shadow p-4 rounded bg-white" enctype="multipart/form-data">

        <input type="hidden" asp-for="Id" />

        <h4 class="text-primary">Movie Information</h4>

        <div class="form-group">
            <label>Title</label>
            <input asp-for="Title" class="form-control" />
        </div>

        <div class="form-group">
            <label>Description</label>
            <textarea asp-for="Description" class="form-control"></textarea>
        </div>

        <div class="form-group">
            <label asp-for="Genre" class="control-label"></label>
            <select asp-for="Genre" asp-items="selectListItems" class="form-control">
            </select>
            <span asp-validation-for="Genre" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Duration (minutes)</label>
            <input asp-for="Duration" type="number" class="form-control" />
        </div>

        <div class="form-group">
            <label>Current Image</label><br />
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="~/images/@Model.ImageUrl" alt="Movie Image" style="max-width: 200px; max-height: 200px;" class="mb-2" />
                <div>
                    <button type="button" class="btn btn-warning btn-sm mb-2" onclick="document.getElementById('ImageUpload').click()">Replace Image</button>
                    <button type="submit" formaction="/Movies/DeleteImage/@Model.Id" formmethod="post" class="btn btn-danger btn-sm mb-2">Delete Image</button>
                </div>
            }
            else
            {
                <p class="text-muted">No image uploaded.</p>
            }

            <!-- Hidden file input for replacement -->
            <input type="file" name="ImageFile" id="ImageUpload" class="form-control" style="display:none" onchange="this.form.submit()" />

            <!-- Keep existing ImageUrl as hidden -->
            <input type="hidden" asp-for="ImageUrl" />
        </div>


        <div class="form-group">
            <label>Image2 URL</label>
            <input asp-for="Image2Url" class="form-control"  />
        </div>
        <div class="form-group">
            <label>Release Date</label>
            <input asp-for="ReleaseDate" type="date" class="form-control" />
        </div>

        <div class="form-group">
            <label>Price</label>
            <input asp-for="Price" type="number" step="0.01" class="form-control" />
        </div>

        <button type="submit" class="btn btn-success">Update Movie</button>
        <a asp-action="Admin" class="btn btn-secondary">Cancel</a>
    </form>
</div>
