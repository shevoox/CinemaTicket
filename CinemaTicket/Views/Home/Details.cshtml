@model Movie
<section class="movie-detail-page">
    <div class="movie-backdrop">
        <div class="backdrop-overlay"></div>
    </div>

    <div class="movie-detail-content">
        <div class="movie-detail-header">
            <div class="movie-poster-container">
                <img id="detail-poster" src="/images/@Model.ImageUrl" alt="Movie Poster">
                <div class="movie-availability"></div>
            </div>

            <div class="movie-detail-info">
                <h1 id="detail-title"></h1>

                <div class="movie-meta-details">
                    <div class="meta-item">
                        <span class="meta-label">Category</span>
                        <span id="detail-category" class="meta-value"></span>
                    </div>
                    <div class="meta-item">
                        <span class="meta-label">@Model.Screenings.FirstOrDefault()?.HallNumber</span>
                        <span id="detail-cinema" class="meta-value"></span>
                    </div>
                    <div class="meta-item">
                        <span class="meta-label">Screening</span>
                        <span id="detail-screening" class="meta-value"></span>
                    </div>
                    <div class="meta-item">
                        <span class="meta-label">Price</span>
                        <span id="detail-price" class="meta-value"></span>
                    </div>
                </div>

                <div class="movie-dates-detail">
                    <div class="date-range">
                        <div class="start-date">
                            <span class="date-label">From</span>
                            <span id="detail-start-date" class="date-value">@Model.Screenings.FirstOrDefault()?.StartDate?.ToString("dd/MM/yyyy")</span>
                        </div>
                        <div class="date-separator"></div>
                        <div class="end-date">
                            <span class="date-label">Until</span>
                            <span id="detail-end-date" class="date-value">@Model.Screenings.FirstOrDefault()?.EndDate?.ToString("dd/MM/yyyy")</span>
                        </div>
                    </div>
                </div>

                <p id="detail-description" class="movie-description-full">
                   @Model.Description
                </p>

                <div class="movie-actions-detail">
                    <button id="book-ticket-btn" class="book-btn">Book Ticket</button>
                    <button class="outline-button trailer-btn">Watch Trailer</button>
                    <a class="back-btn" onclick="window.history.back()">Back to Movies</a>
                </div>
            </div>
        </div>

        <div class="movie-additional-info">
            <div class="section-tabs">
                <button class="tab-btn active" data-tab="showtimes">Showtimes</button>
                <button class="tab-btn" data-tab="cast">Cast & Crew</button>
                <button class="tab-btn" data-tab="reviews">Reviews</button>
            </div>

            <div class="tab-content">
                <div id="showtimes" class="tab-pane active">
                    <h3>Available Showtimes</h3>
                    <div class="showtimes-container">
                        <div class="showtime-date">
                            <h4>Today</h4>
                            <div class="time-slots">
                                <button class="time-slot">@Model.Screenings.FirstOrDefault()?.StartDate?.ToString("hh:mm tt")</button>
                                <button class="time-slot">@Model.Screenings.FirstOrDefault()?.EndDate?.ToString("hh:mm tt")</button>
                            </div>
                        </div>

                    </div>
                </div>

                <div id="cast" class="tab-pane">
                    <h3>Cast & Crew</h3>
                    <div class="cast-container">
                        @foreach (var item in Model.MovieCrews)
                        {
                            <div class="cast-member">
                                <img src="/images/Crow/Leonardo_DiCaprio.jpg" alt="@item.Name" />
                                <p>@item.Name</p>
                                <p class="role">@item.Role</p>
                            </div>
                        }
                    </div>
                </div>



                <div id="reviews" class="tab-pane">
                    <h3>User Reviews</h3>
                    <div class="reviews-container">
                        <p> No Reviews yet</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>